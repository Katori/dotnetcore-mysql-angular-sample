
<!DOCTYPE html>
<html>
<head>
    <title>Index</title>
</head>
<body ng-controller="HomeMembershipController">
    <!-- BEGIN PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                Add / Manage Membership
            </h3>

            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="@Url.Action("Index","Membership")">
                        Home
                    </a>
                    <i class="icon-angle-right"></i>
                </li>
            </ul>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN DASHBOARD STATS -->
    <div class="row">
    </div>
    <!-- END DASHBOARD STATS -->

    <div class="clearfix"></div>
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption"><i class="icon-globe"></i>You can use this page to review all membership.</div>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="btn-group">
                <a href="@Url.Action("Create", "Membership")" class="btn green">
                    Add Membership <i class='icon-plus'></i>
                </a>
            </div>
        </div>
        <div id="sample_editable_1_wrapper" class="dataTables_wrapper" role="grid">
            <table class="table table-striped table-hover table-bordered dataTable" id="sample_editable_1" aria-describedby="sample_editable_1_info" style="width: 1065px;">
                <thead>
                    <tr role="row">
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_1" rowspan="1" colspan="1" style="width: 233px;" aria-label="MemberID:activate to sort column ascending">
                            Member ID
                        </th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_1" rowspan="1" colspan="1" style="width: 240px;" aria-label="LoyaltyCardNo: activate to sort column ascending">
                            Loyalty Card No
                        </th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_1" rowspan="1" colspan="1" style="width: 240px;" aria-label="ExpirationDate: activate to sort column ascending">
                            Expiration Date
                        </th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_1" rowspan="1" colspan="1" style="width: 240px;" aria-label="MemberSiteURL: activate to sort column ascending">
                            Member Site URL
                        </th>
                        <th class="sorting-disabled" role="columnheader" tabindex="0" aria-controls="sample_editable_1" rowspan="1" colspan="1" style="width: 240px;" aria-label="Actions: activate to sort column ascending">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="c in membership track by $index">
                        <td>
                            {{ c.MemberID }}
                        </td>
                        <td>
                            {{ c.LoyaltyCardNo }}
                        </td>
                        <td>
                            {{ c.ExpirationDate | date:'MM/dd/yyyy' }}
                        </td>
                        <td>
                            {{ c.MemberSiteURL }}
                        </td>
                        <td>
                            <button class="label label-sm label-success" ng-click="editmembership(c.MembershipID)">Edit</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>

