<!-- BEGIN BODY -->
<body class="login" style="" ng-controller="CreateUserController">
    <form name="loginForm">
        <!-- BEGIN LOGO -->
        <div style="margin-top:15px;"></div>
        <!-- END LOGO -->
        <!-- BEGIN LOGIN -->
        <div class="content">
            <!-- BEGIN LOGIN FORM -->

            <h3 class="form-title">Register</h3>

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">First Name</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <div><input type="text" autocomplete="off" placeholder="First Name" name="FirstName" class="form-control placeholder-no-fix" ng-model="userDetails.FirstName" required /></div>
                    @Html.ValidationMessage("userDetails.FirstName")
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Last Name</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <div><input type="text" autocomplete="off" placeholder="Last Name" name="LastName" class="form-control placeholder-no-fix" ng-model="userDetails.LastName" required /></div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Email Id</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <div><input type="email" autocomplete="off" placeholder="Email Id" name="EmailID" class="form-control placeholder-no-fix" ng-model="userDetails.EmailID" required /></div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <div><input type="password" autocomplete="off" placeholder="Password" name="Password" class="form-control placeholder-no-fix" ng-model="userDetails.Password" required /></div>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Gender</label>
                <label><input type="radio" name="SGender" ng-change="RadioChange('Male')" ng-model="userDetails.Gender" value="Male" /> Male </label>
                <label><input type="radio" name="SGender" ng-change="RadioChange('Female')" ng-model="userDetails.Gender" value="Female" /> Female </label>
            </div>


            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Date of Birth</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <div><input type="date" autocomplete="off" placeholder="Date of Birth" name="DateofBirth" class="form-control placeholder-no-fix" ng-model="userDetails.DateofBirth" required /></div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Mobile Number</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <div><input type="number" autocomplete="off" placeholder="Mobile Number" name="MobileNumber" class="form-control placeholder-no-fix" ng-model="userDetails.MobileNumber" required /></div>
                </div>
            </div>
            <div class="form-actions">

                <input type="submit" id="btnSubmit" class="btn green pull-right" value="Create" ng-click="adduser()">
            </div>
            <!-- END LOGIN FORM -->
            <!-- BEGIN FORGOT PASSWORD FORM -->


            <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
    top: 0px; width: 100%; height: 100%; background-color: #E4E0E0; z-index: 30001;
    opacity: .8; filter: alpha(opacity=70);display:none">
                <p style="position: absolute; top: 30%; left: 45%; font-weight:bold; color: #F24D4D;text-align:center;">
                    <span id="loadTxt">Loading...</span><br /><img src="~/images/ajax-loader.gif" height="54" width="55">

                </p>
            </div>
        </div>
        <!-- END LOGIN -->
