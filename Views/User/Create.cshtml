        <div class="copyright">
            2016 © Loyalty
        </div>
        <!-- END COPYRIGHT -->

        <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="~/assets/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
        <script src="~/assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
        <script src="~/assets/plugins/jquery.blockui.min.js" type="text/javascript"></script>
        <script src="~/assets/plugins/jquery.cokie.min.js" type="text/javascript"></script>
        <!-- END CORE PLUGINS -->
        <!-- BEGIN PAGE LEVEL PLUGINS -->
        <script type="text/javascript" src="~/assets/plugins/select2/select2.min.js"></script>
        <!-- END PAGE LEVEL PLUGINS -->
        <!-- BEGIN PAGE LEVEL SCRIPTS -->
        <script src="~/assets/scripts/app.js"></script>
        <script type="text/javascript">
            var app = angular.module('app', ['ngCookies']);


            app.factory('loyaltyFactory', ['$http', '$q', function ($http, $q) {

                var loyaltyObject = {};
                //Create api call through factory pattern
                loyaltyObject.createUser = function (usr) {
                    var deferred = $q.defer();

                    $http({
                        url: "/User/AddUser",
                        method: "POST",
                        params: usr
                    }).success(function (response) {
                        deferred.resolve(response);
                    }).error(function (error) {
                        deferred.reject(error);
                    });

                    return deferred.promise;
                }

                return loyaltyObject;
            }]);

            app.controller('CreateUserController', function ($scope, $http, $window, loyaltyFactory) {

                $scope.RadioChange = function (s) {
                    $scope.userDetails.Gender = s;
                };

                $scope.userDetails = {
                    FirstName: undefined,
                    LastName: undefined,
                    EmailID: undefined,
                    Password: undefined,
                    Gender: undefined,
                    DateofBirth: undefined,
                    MobileNumber: undefined
                };

                $scope.userDetails.Gender = "Male";
                $scope.adduser = function adduser() {


                    if ($scope.userDetails.FirstName == undefined) {
                        alert("Please enter first name");
                        return;
                    }
                    else if ($scope.userDetails.LastName == undefined) {
                        alert("Please enter last name");
                        return;
                    }
                    else if ($scope.userDetails.EmailID == undefined) {
                        alert("Please enter email id");
                        return;
                    }
                    else if ($scope.userDetails.Password == undefined) {
                        alert("Please enter password");
                        return;
                    }
                    else if ($scope.userDetails.MobileNumber == undefined) {
                        alert("Please enter mobile no");
                        return;
                    }

                    $('#loadTxt').html("Loading Registration...");
                    setBusyLoaderVisibility(true);
                    var data = $scope.userDetails;
                    loyaltyFactory.createUser(data).then(function (items) {
                        console.log('items');
                        $window.location.href = '/';
                    }, function (status) {
                        console.log('Error=>' + status);
                    });
                }
            });

        </script>

        <!-- END PAGE LEVEL SCRIPTS -->
        <script>

            function setBusyLoaderVisibility(isShow) {
                document.getElementById("divLoading").style.display = isShow ? "block" : "none";
            }

            jQuery(document).ready(function () {
                App.init();
    
                $("#target").submit(function (event) {
                    $('#loadTxt').html("Loading ...");
                    setBusyLoaderVisibility(true);

                });
                setTimeout(function () {
                    if ($("#sample_1_info") && $("#sample_1_info").html()) {
                        var pagingParts = $("#sample_1_info").html().match(/[0-9]+/g);
                        if (pagingParts.length > 2) {
                            if (pagingParts[1] == $("div.table-scrollable table tr").length - 1) {
                                setBusyLoaderVisibility(false);
                            }
                        }
                        else {
                            setBusyLoaderVisibility(false);
                        }
                    }
                    else {
                        setBusyLoaderVisibility(false);
                    }
                }, 0);
            });


        </script>
        <!-- END JAVASCRIPTS -->
        <!-- END BODY -->
    </form>
</body>
