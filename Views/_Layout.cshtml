</head>
<body class="page-header-fixed">
    @using Microsoft.AspNetCore.Http;
    @Html.Partial("~/Views/Shared/_header.cshtml")
    <div class="clearfix">
    </div>
    <div class="page-container">
        <div id="newdiv" class="page-sidebar navbar-collapse collapse" style="z-index:200;">
            <ul class='page-sidebar-menu'>
                <li>
                    <div class='sidebar-toggler hidden-phone'></div>
                </li>
                <li style="padding-top:20px"></li>
                <li class=''>
                    <a href=''><i class='icon-user'></i><span class='title'>Loyalty</span><span class='arrow'></span></a>
                    <ul class='sub-menu' style='display: none;'>
                        <li class=''><a href='/User/Account'>My Account</a></li>
                        <li class=''><a href='/Membership/Index'>Membership</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="page-content-wrapper">
            <div class="page-content" style="z-index:0;">
                @RenderBody()
            </div>
        </div>
    </div>

    <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
        top: 0px; width: 100%; height: 100%; background-color: #E4E0E0; z-index: 30001;
        opacity: .8; filter: alpha(opacity=70);display:none">
        <p style="position: absolute; top: 48%; left: 48%; font-weight:bold; color: #F24D4D;text-align:center;">
            <span id="loadTxt">Loading...</span><br />
        </p>
    </div>
    <iframe id="myIframe" src="~/images/ajax-loader.gif" title="Loading..." scrolling="no" frameborder="0" style="width: 50%; position: fixed; z-index: 30002; height: 50%;left:50%; top: 50%; display: none; "></iframe>


    @Html.Partial("~/Views/Shared/_Footer.cshtml")
    <script src="~/assets/plugins/jquery-ui/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/jquery.cookie.min.js"></script>
