    <script src="~/assets/scripts/index.js"></script>
    <script src="~/assets/scripts/app.js"></script>

    <script src="~/js/angular.min.js"></script>
    <script src="~/js/angular-cookies.min.js"></script>

    <script src="~/scripts/service.js"></script>
    <script src="~/scripts/factory.js"></script>
    <script src="~/scripts/HomeMembershipController.js"></script>
    <script src="~/scripts/CreateMembershipController.js"></script>
    <script src="~/scripts/EditUserController.js"></script>
    <script src="~/scripts/EditMembershipController.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>


<script type="text/javascript">

    function setBusyLoaderVisibility(isShow) {
        $("#myIframe").attr('src', '/images/ajax-loader.gif');
        document.getElementById("myIframe").style.display = isShow ? "block" : "none";
        document.getElementById("divLoading").style.display = isShow ? "block" : "none";
    }

    jQuery(document).ready(function () {

        App.init(); // initlayout and core plugins
        Index.init();
        setTimeout(function () {
            if ($("#sample_1_info") && $("#sample_1_info").html()) {

                if ($(".pagination").css("visibility") == "visible") {
                    setBusyLoaderVisibility(false);
                }
            }    
        }, 0);
    });
</script>